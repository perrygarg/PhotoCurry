<?xml version="1.0" encoding="utf-8"?>
<com.tsystems.photocurry.common.util.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_horiontal_divider_footer"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:transitionName="photocurrytransition"/>

</com.tsystems.photocurry.common.util.SquareLayout>