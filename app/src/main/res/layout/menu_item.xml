<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    >
    <com.tsystems.photocurry.common.util.CircleImageView
        android:id="@+id/product_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/kitchen_small"
      />
<!--<ImageView
    android:id="@+id/product_image"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_marginLeft="5dp"
    android:src="@drawable/kitchen_small"/>-->
    <TextView
        android:id="@+id/product_name"
        android:layout_toRightOf="@+id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/product_name_black"
        android:text="McAloo Tikki"/>
    <TextView
        android:id="@+id/product_price"
        android:layout_toRightOf="@+id/product_image"
        android:layout_below="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/product_price"
        android:text=""/>
   <!-- <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">-->
    <ImageButton
        android:id="@+id/minus_sign"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:clickable="true"
        android:layout_below="@id/product_name"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@+id/plus_sign"

        android:background="@drawable/minus_selector"
        />
    <TextView
        android:id="@+id/product_qty"
        android:layout_toLeftOf="@+id/plus_sign"
        android:layout_below="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="1"/>
    <ImageButton

        android:id="@+id/plus_sign"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@id/product_name"
        android:background="@drawable/plus"
        />

</RelativeLayout>